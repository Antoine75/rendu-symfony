{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">Write your invoice</h1>

    <section class="container border">
        <div class="row">
            <div class="row">
                <table class="table">
                    <thead>
                    <tr>

                        <th>Name</th>
                        <th>Address</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Projet</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}
                        <tr>

                            <td>{{ invoice.name }}</td>
                            <td>{{ invoice.address }}</td>
                            <td>{{ invoice.price }} â‚¬</td>
                            <td>{{ invoice.description }}</td>
                            <td>{{ invoice.invoiceProject }}</td>
                            <td>
                                <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}">show</a>
                                <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_invoice_new') }}">Create new</a>
            </div>
        </div>

    </section>

{% endblock %}
